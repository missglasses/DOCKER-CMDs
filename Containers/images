//pull (download) images
docker pull image1

//see all images available on your machine
docker images

//specific version : docker pull image-name:ver:num
docker pull ubuntu:22.04

//remove image: docker image rm image-name
docker image rm image1

//remove unused images also
docker image prune -a

//save image: docker save -o image.tar classify_spam:ver_num
docker save -o spam_updated.tar spam:v2

//pull container from registry 
docker pull docker.mycompany.com/spam_alice:v3

//run container
docker run docker.mycompany.com/spam_alice:v3

//load
docker load -i spam_bob.tar

//run container   
docker run spam_bob:v3
